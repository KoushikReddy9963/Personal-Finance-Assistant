  },
  "keywords": [
    "finance",
    "personal-finance",
    "expense-tracker",
    "income-tracker",
    "mern",
    "react",
    "mongodb",
    "express",
    "nodejs"
  ],
  "author": "Finance Tracker Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}